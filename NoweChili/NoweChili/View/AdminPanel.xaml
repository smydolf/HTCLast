<Window x:Class="NoweChili.View.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoweChili.View"
        mc:Ignorable="d"
        Title="Panel Administracyjny" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="Edit" Content="Edit" Click="Edit_OnClick"></Button>
        <TextBox x:Name="NameUserLaber" Grid.Row="0" Grid.Column="1"></TextBox>
        <TextBlock x:Name="UpdateToShowTextBlock" Grid.Row="1"></TextBlock>



    </Grid>
</Window>
